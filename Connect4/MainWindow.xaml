                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            
            <Image Source="images/LBoard.png" Grid.Row="0" Grid.Column="0" Grid.RowSpan="6" VerticalAlignment="Bottom"/>
            <Image Source="images/RBoard.png" Grid.Row="0" Grid.Column="9" Grid.RowSpan="6" VerticalAlignment="Bottom"/>
            <Border Grid.Row="0" Grid.Column="1">
                <Image Source="images/BoardMain.png"/>
            </Border>
            <Image Source="images/BoardMain.png" Grid.Row="0" Grid.Column="2"/>
